<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:src="@drawable/jgilogo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:text="Welcome to Jain College "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/endblue"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text="E-mail or Phone"
            android:id="@+id/e1"/>
        <EditText
            android:id="@+id/ed1"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:drawablePadding="10dp"
            android:background="@drawable/strokeboarder"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/endblue"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Password"
            android:id="@+id/p1"/>

        <EditText
            android:id="@+id/ed2"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/strokeboarder"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="300dp"
                android:id="@+id/login"
                 android:layout_height="wrap_content"
                android:background="@drawable/strokeboarder"
                android:layout_marginTop="30dp"
                android:text="Login"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:id="@+id/signup"
                android:textColor="@color/endblue"
                android:text="Dont havre an account! Sign up here"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>